<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".ActivityAuthor">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="20sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Автор на GitHub"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/icon"
        android:layout_toRightOf="@+id/git"
        />

    <ImageButton
        android:id="@+id/git"
        android:layout_width="70sp"
        android:layout_height="50sp"
        android:backgroundTint="@color/colorPrimary"
        android:tint="@color/white"
        android:src="@drawable/ic_person_outline_black_24dp"
        android:layout_below="@+id/icon"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:onClick="GitClick"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Автор ВКонтакте"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_toRightOf="@+id/vk"
        android:layout_below="@+id/git"

        />
    <ImageButton
        android:id="@+id/vk"
        android:layout_width="70sp"
        android:layout_height="50sp"
        android:backgroundTint="@color/colorPrimary"
        android:tint="@color/white"
        android:src="@drawable/ic_public_black_24dp"
        android:layout_below="@+id/git"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:onClick="VKClick"

        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vk"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textColor="@color/black"
        android:text="@string/authorwords"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:textSize="20sp"
        android:layout_marginTop="10sp"

        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textColor="@color/black"
        android:text="@string/end"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/clicktuner2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight=".33"
            android:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/ic_mic_24dp"
            android:onClick="ClickTuner2"

            />

        <ImageButton
            android:id="@+id/clickhelp2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight=".34"
            android:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/ic_help_24dp"
            android:onClick="ClickHelp2"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_info_24dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:tint="@color/colorPrimary"
            />
    </LinearLayout>
</RelativeLayout>