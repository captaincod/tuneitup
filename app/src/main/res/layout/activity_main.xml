<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".SimpleGuitarTunerActivity">

    <TextView
        android:id="@+id/mainMessage"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp" />

    <ImageView
            android:id="@+id/guitar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/strings0" />

    <Spinner
        android:id="@+id/tuningSelector"
        android:layout_width="match_parent"
        android:layout_height="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight=".33"
            android:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/ic_mic_24dp"
            android:tint="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/clickhelp1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight=".34"
            android:backgroundTint="@color/colorPrimaryDark"
            android:onClick="ClickHelp1"
            android:src="@drawable/ic_help_24dp" />
        <ImageButton
            android:id="@+id/clickauthor1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_info_24dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:onClick="ClickAuthor1"
                />
    </LinearLayout>

</LinearLayout>